pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
t=0
d=1
::_::
cls()
t+=1*d
if t%100==0 then
	d*=-1
end

-- draw test pattern
for i=0,120,8 do
	rectfill(i,0,i+8,127,i/8)
end

-- iris effect
cx,cy,r,c=64,64,t%128,0
for y=0,127 do
	x=sqrt(r*r-(y-cy)*(y-cy))+cx
	rectfill(128,y,x,y,c)
	rectfill(-1,y,cx-(x-cx),y,c)
end

?t,1,1,7
flip()
goto _
