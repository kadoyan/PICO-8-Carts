pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
t=0
x,y=0,0
x1,y1=20,100
x2,y2=20,100
px1,py1=32,32
px2,py2=90,90
end

function _update()
t+=0.02
if t>1 then
	t=0
	x1,y1=rnd(127),rnd(127)
	x2,y2=rnd(127),rnd(127)
	px1,py1=rnd(127),rnd(127)
	px2,py2=rnd(127),rnd(127)
end
x=(1-t)^3*x1+3*(1-t)^2*t*px1
	+3*(1-t)*t^2*px2+t^3*x2
y=(1-t)^3*y1+3*(1-t)^2*t*py1
	+3*(1-t)*t^2*py2+t^3*y2
end

function _draw()
cls()
pset(x1,y1,7)
pset(x2,y2,7)
pset(px1,py1,8)
pset(px2,py2,8)
circfill(x,y,2,8)
print("t="..t,1,1,7)
?("x="..x)
?("y="..y)
end
